{
  "expo": {
    "name": "PockTick",
    "slug": "pocktick",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/square_logo.png",                      
    "scheme": "pocktick",
    "userInterfaceStyle": "automatic",
    "platforms": ["ios", "android", "web"],
    "newArchEnabled": false,

    "splash": {
      "image": "./assets/images/square_logo.png",         
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pocktick.app",
      "buildNumber": "2",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },

    "android": {
      "package": "com.pocktick.app",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/square_logo.png",
        "backgroundColor": "#ffffff"
      }
    },

    "web": {
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-splash-screen"                                 
    ],

    "extra": {
      "eas": {
        "projectId": "9169a496-49b2-40b9-8fba-246da66a622c"
      },
      "router": {}
    },

    "assetBundlePatterns": ["**/*"],
    "entryPoint": "./index.js",
    "owner": "danshl"
  }
}
